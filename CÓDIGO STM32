/* USER CODE BEGIN Header */
/**
  **************************
  * @file            : main.c
  * @brief           : Main program body - Fusión de UART/ESP32 y TFT Display
  **************************
  * @attention
  *
  * Este código combina la recepción de datos de temperatura (float de 4 bytes)
  * desde un ESP32 a través de USART1, disparado por un botón, y la visualización
  * de esa temperatura en una pantalla TFT ILI9341 inicializada en SPI1.
  *
  **************************
  */
/* USER CODE END Header */
/* Includes ------------------------------------------------------------------*/
#include "main.h"
#include <string.h>
#include <stdio.h>
/* Private includes ----------------------------------------------------------*/
/* USER CODE BEGIN Includes */
#include "ili9341.h"    // Librería TFT ILI9341
#include "Bitmaps.h"    // Mapas de bits para la TFT (contiene 'fondo')
/* USER CODE END Includes */

/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
uint8_t solicitud = 'R';

/* Buffer para guardar la temperatura (float = 4 bytes) */
uint8_t rx_buffer_esp32[4];
volatile uint8_t rx_index_esp32 =0;
volatile uint8_t nuevo_dato =0;
volatile uint8_t esperando_respuesta = 0;

// Boton 1 (Asumido como el botón de solicitud)
#define bot1_Pin GPIO_PIN_8
#define bot1_GPIO_Port GPIOC

// Antirrebote para el botón
uint32_t ultimo_bot1=0;
uint32_t delay_bot=50;

// Posición de la TFT para mostrar la temperatura
//#define TEMP_X_POS 100 // Ajustado para centrar el valor
//#define TEMP_Y_POS 50  // Posición para el valor grande
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;

/* USER CODE BEGIN PV */
extern uint16_t kitty[]; // Fondo de la TFT
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_USART3_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
// Función para enviar mensajes de debug a través de huart2
void transmit_uart(char *string) {
	uint8_t len = strlen(string);
	HAL_UART_Transmit (&huart2, (uint8_t*)string, len, 200);
}

// Redefinición de _write para usar printf() en la UART2
int _write(int file, char *ptr, int len)
{
    HAL_UART_Transmit(&huart2, (uint8_t*)ptr, len, 100);
    return len;
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_USART2_UART_Init();
  MX_USART3_UART_Init();
  /* USER CODE BEGIN 2 */

  //Inicialización de la TFT
  LCD_Init();
  LCD_Clear(0x00);
  //FillRect(50,60,20,20,0xF800);
  // Carga el fondo (Si el bitmap es 320x240)
  LCD_Bitmap(0, 0, 320, 240, kitty);

  // Texto inicial de la interfaz (Tamaño 2)
  //LCD_Print("PROYECTO 3: Lector I2C/TFT", 20, 10, 2, 0xFFFF, 0x0000);

  // Texto de instrucción (Tamaño 1)
  //LCD_Print("Presiona el boton para medir", 20, 200, 1, 0xFFFF, 0x4c9d);

  // Etiqueta de la temperatura (Tamaño 2)
  //LCD_Print("TEMP:", 10, TEMP_Y_POS, 2, 0xFFFF, 0x0000);
  // Muestra un valor inicial (Tamaño 3 para que se vea grande)
  //LCD_Print("--.-- C", TEMP_X_POS, TEMP_Y_POS, 3, 0xFFFF, 0x0000);
  // --------------------------------

  // Mensaje de inicio de debug
  transmit_uart("Presione el boton para pedir TEMP.\r\n");

  /Espera los datos del ESP32/
   HAL_UART_Receive_IT(&huart3, (uint8_t*)&rx_buffer_esp32[rx_index_esp32], 1);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  float temp = 0.0f; // Variable para almacenar la temperatura
  char temp_str[50]; // Buffer para el string de la temperatura

  while (1)
  {
      if (nuevo_dato)
      {
          // La bandera se levanta cuando se han recibido los 4 bytes del float
          nuevo_dato = 0;

          // 2) Reconstruir el float: Interpretar los 4 bytes como un tipo float
          // Esto asume que el ESP32 envió los bytes en el mismo orden que el STM32 espera (Little-Endian)
          memcpy(&temp, rx_buffer_esp32, sizeof(float));

          // 3) Convertir a string con 2 decimales para imprimir
          int entero = (int)temp;
          // Multiplicar por 100 y tomar el resto para tener 2 decimales
          int decimal = (int)((temp - entero) * 100);
          if (decimal < 0) decimal = -decimal; // Asegura que el decimal sea positivo

          // 4) Preparar el string para mostrar en la TFT y debug
          sprintf(temp_str, "%d.%02d C ", entero, decimal);

          // 5) Mostrar en TFT
          // Borrar el valor anterior (sobreescribiendo con el color de fondo: 0x0000 = negro)
          //LCD_Print("         ", TEMP_X_POS, TEMP_Y_POS, 3, 0x0000, 0x0000);
          // Mostrar el nuevo valor (Tamaño 3, color verde: 0x07E0)
          //LCD_Print(temp_str, TEMP_X_POS, TEMP_Y_POS, 3, 0x07E0, 0x0000);

          // Opcional: Mostrar por debug
          sprintf(temp_str, "Temperatura recibida: %d.%02d C\r\n", entero, decimal);
          transmit_uart(temp_str);

          // 6) Limpiar buffer (opcional)
          memset(rx_buffer_esp32, 0, 4);
      }

      // Pequeño delay para liberar recursos de la CPU
      HAL_Delay(5);

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 80;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

